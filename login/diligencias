<script>
    $( document ).ready(function () {
        listar();
    });

    function listar ()
    {
		let cuerpo = {
		    listar : '1', 
		    tipoDoc: $('#tipoDoc').val(), 
		    txtBuscar: $('#txtBuscar').val()
		    
		};
		
		$("#exportar").attr('href', `info_d.php?exportar=1&tipoDoc=${cuerpo.tipoDoc}&txtBuscar=${cuerpo.txtBuscar}`);
        
        $.post('../diligencias_ajax.php', cuerpo).done(function ( resp ) {
            $('#cuerpo').html(resp);
        });
    }
</script>